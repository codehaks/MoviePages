@page

@model MoviePages.Pages.IndexModel
@{
    int i = 1;

    // Toggle sort order
    string newSortOrder = Model.SortOrder == "asc" ? "desc" : "asc";

    string nameSortOrder = Model.SortBy == "name" ? newSortOrder : "asc";
    string yearSortOrder = Model.SortBy == "year" ? newSortOrder : "asc";
}


<h1>Movies</h1>
<hr />

<!-- Search Form -->
<form method="get" class="row g-2 align-items-center">
    <input asp-for="SortOrder" hidden />
    <input asp-for="SortBy" hidden />
    <div class="col-auto">
        <input type="text" name="SearchTerm" class="form-control" placeholder="Search by movie name" value="@Model.SearchTerm" />
    </div>

    <div class="col-auto">
        <input type="number" name="MinYear" class="form-control" placeholder="Min Year" value="@Model.MinYear" />
    </div>

    <div class="col-auto">
        <input type="number" name="MaxYear" class="form-control" placeholder="Max Year" value="@Model.MaxYear" />
    </div>

    <div class="col-auto">
        <button type="submit" class="btn btn-secondary">Search</button>
    </div>

    <div class="col-auto">
        <!-- Clear Filters Button -->
        <a href="./Index" class="btn btn-light">Clear Filters</a>
    </div>
</form>


<hr />
<a asp-page="create" class="btn btn-primary">New Movie</a>

@if (Model.MovieList is null || Model.MovieList.Count == 0)
{
    <p>No movies found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>

                    <a asp-route-sortby="name"
                       asp-route-sortorder="@newSortOrder"
                       asp-route-searchterm="@Model.SearchTerm"
                       asp-route-minyear="@Model.MinYear"
                       asp-route-maxyear="@Model.MaxYear">
                        Movie Name
                    </a>
                    @if (Model.SortBy == "name")
                    {
                        @if (Model.SortOrder == "asc")
                        {
                            <span>&#9650;</span> <!-- Up arrow -->
                        }
                        else if (Model.SortOrder == "desc")
                        {
                            <span>&#9660;</span> <!-- Down arrow -->
                        }
                    }
                </th>
                <th>
                    <a asp-route-sortby="year"
                       asp-route-sortorder="@newSortOrder"
                       asp-route-searchterm="@Model.SearchTerm"
                       asp-route-minyear="@Model.MinYear"
                       asp-route-maxyear="@Model.MaxYear">
                        Year
                    </a>
                    @if (Model.SortBy == "year")
                    {
                        @if (Model.SortOrder == "asc")
                        {
                            <span>&#9650;</span> <!-- Up arrow -->
                        }
                        else if (Model.SortOrder == "desc")
                        {
                            <span>&#9660;</span> <!-- Down arrow -->
                        }
                    }

                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in (Model.MovieList ?? new List<Movie>()))
            {
                <tr>
                    <td>@i</td>
                    <td>@movie.Name</td>
                    <td>@movie.Year</td>
                    <td>
                        <a asp-page="edit" asp-route-id="@movie.Id" class="btn btn-info"> Edit </a>
                        <a asp-page="delete" asp-route-id="@movie.Id" class="btn btn-danger"> Delete </a>
                    </td>
                </tr>
                i++;
            }
        </tbody>
    </table>
}

<hr />

<nav aria-label="Page navigation example">
    <ul class="pagination">
        <li class="page-item"><a class="page-link" asp-route-pagenumber="1">|<</a></li>

        @for (int p = 1; p <= Model.TotalPages; p++)
        {
            <li class="page-item  @(p == Model.PageNumber ? "active" : "")">
                <a class="page-link" 
                asp-route-pagenumber="@p"
                   asp-route-sortby="@Model.SortBy"
                   asp-route-sortorder="@Model.SortOrder"
                   asp-route-searchterm="@Model.SearchTerm"
                   asp-route-minyear="@Model.MinYear"
                   asp-route-maxyear="@Model.MaxYear">
                    @p
                </a>
            </li>
        }


        <li class="page-item"><a class="page-link" asp-route-pagenumber="@Model.TotalPages">>|</a></li>
    </ul>
</nav>

<hr />
Total Count: @(Model.MovieList?.Count ?? 0)

