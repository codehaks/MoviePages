@page

@model MoviePages.Pages.IndexModel
@{
    int i = 1;
    var message = "welcome!";
}


<h1>@message</h1>
<hr />

<a asp-page="create" class="btn btn-primary"> Movie</a>

@if (Model.MovieList is null || Model.MovieList.Count == 0)
{
    <p>No movies found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Movie Name</th>
                <th>Year</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in (Model.MovieList ?? new List<Movie>()))
            {
                <tr>
                    <td>@i</td>
                    <td>@movie.Name</td>
                    <td>@movie.Year</td>
                </tr>
                i++;
            }
        </tbody>
    </table>
}


<hr />
Total Count: @(Model.MovieList?.Count ?? 0)
<br />
After 2000s: @CountAfter2000s()


@functions {
    public int CountAfter2000s()
    {
        return Model.MovieList?.Count(m => m.Year > 2000) ?? 0;
    }
}

